pipeline {
    agent {
        kubernetes {
            label 'jenkins-agent'
            defaultContainer 'jnlp'
            yamlFile 'jenkins-agent.yaml'
        }

    environment {
        DOCKER_IMAGE = "noa10203040/flask_app"
        K8S_NAMESPACE = "prod"
        HELM_RELEASE = "flask-app"
        HELM_CHART_PATH = "app/helm-chart"
        IMAGE_TAG = "${env.GIT_COMMIT.take(8)}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out code from GitHub..."
                git branch: 'main', url: 'https://github.com/noaeisnkut/k8s-task.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image: $DOCKER_IMAGE:$IMAGE_TAG"
                    def image = docker.build("$DOCKER_IMAGE:$IMAGE_TAG")
                }
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        echo "Pushing Docker image: $DOCKER_IMAGE:$IMAGE_TAG"
                        docker.image("$DOCKER_IMAGE:$IMAGE_TAG").push()
                    }
                }
            }
        }

        stage('Deploy to EKS via Helm') {
            steps {
                script {
                    echo "Deploying Helm chart to namespace: $K8S_NAMESPACE"
                    sh "kubectl create namespace $K8S_NAMESPACE || true"
                    sh """
                        helm repo update
                        helm upgrade --install $HELM_RELEASE $HELM_CHART_PATH \
                            --namespace $K8S_NAMESPACE \
                            --set flask.image=$DOCKER_IMAGE \
                            --set flask.tag=$IMAGE_TAG \
                            --wait
                    """
                }
            }
        }
    }

    post {
        success {
            echo "Deployment successful! Image: $DOCKER_IMAGE:$IMAGE_TAG"
        }
        failure {
            echo "Deployment failed!"
        }
    }
}
